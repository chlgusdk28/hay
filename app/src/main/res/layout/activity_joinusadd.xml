<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추가정보를 \n입력해주세요."
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#3E3D3D"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/joinadd_tv_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Email print"
            android:textColor="@color/input_register"
            android:textSize="20dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        >

        <EditText
            android:id="@+id/joinadd_et_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="비밀번호를 입력해주세요."
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="20dp"
            android:layout_marginTop="15dp"

            />


        <EditText
            android:id="@+id/joinadd_et_pwcheck"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="비밀번호 확인."
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            />


        <TextView
            android:id="@+id/joinadd_tv_pwcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호는 8자리이상 문자 + 숫자만 입력해주세요"
            android:textColor="@color/input_register"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/joinadd_et_tel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="전화번호를 입력해주세요."
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            />


        <TextView
            android:id="@+id/joinadd_tv_telcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가입되어 있는 번호는 사용하실 수 없습니다."
            android:textColor="@color/input_register"
            android:layout_marginLeft="10dp"
            />


        <EditText
            android:id="@+id/joinadd_et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="이름을 입력해주세요."
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/joinadd_btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/login_loginbtn_shape"
            android:text="가입하기"
            android:textColor="@color/white"
            app:backgroundTint="@color/btn_logins" />




    </LinearLayout>




    <EditText
        android:id="@+id/edt_ip"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:textSize="20dp"
        android:gravity="center"
        android:text="192.168.2.7"
        android:hint="Apache Server IP Address"
        android:visibility="invisible"
        />



</LinearLayout>
